{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "error",
    "no-extra-semi": "error",
    "no-unreachable": "error",
    "no-useless-return": "error",
    "semi": ["warn", "always"],
    "quotes": ["warn", "double"],
    "comma-dangle": ["warn", "never"],
    "no-console": 2
  }
}
